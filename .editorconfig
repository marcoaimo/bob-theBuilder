# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
## with a newline ending every file
insert_final_newline = true
## and trailing of white spaces
trim_trailing_whitespace = true
# Set default charset
charset = utf-8
# Indentation style
indent_style = space
indent_size = 2
